<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.cart.DeliveryInformationActivity">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/actionBarColor">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:src="@drawable/ic_back"
            android:padding="@dimen/_6sdp"
            android:layout_centerVertical="true"
            app:tint="@color/appColor"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery information"
            android:layout_centerVertical="true"
            android:textColor="@color/appColor"
            android:layout_toRightOf="@id/back"
            android:fontFamily="@font/nunito_sans_semi_bold"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"/>


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/proceedBtn"
        android:layout_below="@id/rel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliver"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/itemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 items"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_toRightOf="@id/name"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliver"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_toRightOf="@id/itemCount"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping Address"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:layout_below="@id/name"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mr. Kishan Sharma"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_below="@id/tv"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textStyle="normal"/>

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 8839468374"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_below="@id/fullName"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textStyle="normal"/>

                <!-- Address -->
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House No 11/2, Kachna, Raipur,\nChhattisgarh, Pin Code 492001"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_below="@id/phoneNumber"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"/>


                <TextView
                    android:id="@+id/editBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change/Edit Address"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_below="@id/address"
                    android:background="@drawable/line_bg"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:textStyle="normal"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp"
                android:background="@color/appGreay"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartItemRV"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                tools:listitem="@layout/row_product_cart_order_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact details:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile number"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8839468374"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@id/name"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yuvi.the.lion04@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@id/name"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="normal"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery details:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                android:layout_below="@id/name"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yuvi Rajput"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201, Cloth Crew Najafgarh Kaspashera Rd, Bijwasan, New Delhi, DL 110061"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="normal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp"
                android:background="@color/appGreay"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:text="Order summary"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:textColor="@color/dark_greay"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/priseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/firstInstallment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:text="Nunito Sans"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/firstInstallmentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_5sdp"
                    android:text="₹ 20,425"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:textColor="@color/black" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstInstallment"
                    android:id="@+id/relativeLayout">

                    <TextView

                        android:id="@+id/secondInstallment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:fontFamily="@font/nunito_sans_semi_bold"
                        android:text="Security Deposit"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/thirdInstallmentTxt"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/secondInstallment"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="Discount"
                        android:fontFamily="@font/nunito_sans_semi_bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/thirdInstallmentTv"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/SecondInstallmentTv"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_5sdp"
                        android:text="₹0"
                        android:fontFamily="@font/nunito_sans_semi_bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/SecondInstallmentTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_5sdp"
                        android:text="₹4,000"
                        android:fontFamily="@font/nunito_sans_semi_bold"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_below="@id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/limeGreay"/>

                <TextView
                    android:id="@+id/totalLableTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:padding="@dimen/_5sdp"
                    android:text="Total price - "
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/allTotalPriseTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/_5sdp"
                    android:text="₹ 20,425"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/allTotalPriseTv"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_sans_semi_bold"
                    android:text="*Inclusive of all taxes"
                    android:textColor="@color/dark_greay"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/proceedBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1"
        android:backgroundTint="@color/appColor"
        android:text="Process to  Checkout"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/_5sdp" />

</RelativeLayout>