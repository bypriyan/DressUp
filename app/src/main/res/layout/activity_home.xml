<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.HomeActivity">

    <!-- Main Content -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/actionBarColor">

            <ImageView
                android:id="@+id/navDrawer"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/menu"
                android:padding="@dimen/_6sdp"
                android:layout_centerVertical="true"
                app:tint="@color/appColor"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"/>

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_33sdp"
                android:src="@drawable/logo"
                android:layout_centerVertical="true"
                app:tint="@color/orange"
                android:layout_toRightOf="@id/navDrawer"/>

            <ImageView
                android:id="@+id/notification"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/notifications_unread"
                android:padding="@dimen/_4sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:tint="@color/appColor"
                android:layout_marginRight="@dimen/_15sdp"/>

            <ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/shopping_cart"
                android:padding="@dimen/_4sdp"
                android:layout_centerVertical="true"
                app:tint="@color/appColor"
                android:layout_toLeftOf="@id/notification"
                android:layout_marginRight="@dimen/_5sdp"/>

            <ImageView
                android:id="@+id/locationStore"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/location_icon_store"
                android:padding="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/cart"
                android:layout_marginRight="@dimen/_5sdp"/>

            <ImageView
                android:id="@+id/scanner"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/qr_code_scanner"
                android:padding="@dimen/_4sdp"
                android:layout_centerVertical="true"
                app:tint="@color/appColor"
                android:layout_toLeftOf="@id/locationStore"
                android:layout_marginRight="@dimen/_5sdp"/>
        </RelativeLayout>

        <fragment
            android:id="@+id/frameLayout"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            android:layout_below="@id/rel"
            android:layout_above="@id/viewLine"
            app:navGraph="@navigation/mobile_navigation"/>

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/lite_greay"
            android:layout_above="@id/frame"/>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@color/actionBarColor"
            android:layout_height="wrap_content">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:labelVisibilityMode="labeled"
                app:itemTextColor="@color/icon_colors"
                app:itemIconTint="@color/icon_colors"
                app:itemRippleColor="@android:color/transparent"
                app:itemBackground="@drawable/bottom_nav_item_background"
                app:menu="@menu/bottom_navigation"
                android:elevation="@dimen/_2sdp"
                style="@style/CustomBottomNavigationItem"
                android:padding="@dimen/_6sdp"
                android:layout_alignParentBottom="true"/>

            <include
                layout="@layout/bottom_nav_cc_item"
                android:layout_width="@dimen/_60sdp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </RelativeLayout>

    <!-- Custom Navigation Drawer -->
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_gravity="start">

        <include
            layout="@layout/nav_header"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/profile"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Profile"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order History"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shop By"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/appColor"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Category"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="All "
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Collections"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shop For"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/appColor"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Men"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Women"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kids"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Store Location"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right_shift_arrow"
                        app:tint="@color/black"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/dawer_item_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Logout"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/banner_girl_traditional"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver 2.1.8"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/dark_greay"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
